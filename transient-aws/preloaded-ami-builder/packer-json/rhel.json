{
    "variables": {
	    "aws_access_key": "REPLACE_ME",
    	"aws_secret_key": "REPLACE_ME",
        "region": "us-west-2[REPLACE_ME]",
        "parcel_url": "http://archive.cloudera.com/cdh5/parcels/5.8/",
        "cm_repository_url": "http://archive.cloudera.com/cm5/redhat/7/x86_64/cm/5.8/",
        "ami": "ami-d2c924b2[REPLACE_ME]", 
        "vpc_id": "vpc-1ad7017e[REPLACE_ME]", 
        "subnet_id": "subnet-003ac976[REPLACE_ME]",
        "security_group_id": "sg-8e2860e9[REPLACE_ME]",
        "ami_prefix": "",
        "ami_virtualization_type": "hvm",
        "root_device_name": "/dev/sda1[REPLACE_ME]",
        "ssh_username": "centos[REPLACE_ME]",
        "preextract_parcel": "true"
    },
    "builders": [
    {
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "type": "amazon-ebs",
        "region": "{{user `region`}}",
        "source_ami": "{{user `ami`}}",
        "instance_type": "m3.xlarge",
        "ssh_username": "{{user `ssh_username`}}",
        "ami_name": "{{user `ami_prefix`}} {{timestamp}}",
        "ami_virtualization_type": "{{user `ami_virtualization_type`}}",
        "ssh_timeout": "10m",
        "launch_block_device_mappings": [{
            "device_name": "{{user `root_device_name`}}",
            "volume_size": 30,
            "delete_on_termination": true
        }],
        "vpc_id": "{{user `vpc_id`}}",
        "subnet_id": "{{user `subnet_id`}}",
        "security_group_id": "{{user `security_group_id`}}",
        "ssh_pty": "true",
        "ssh_private_ip": "false",
	"associate_public_ip_address": "true"
    }],
    "provisioners": [
    {
        "type": "shell",
        "inline": "sudo yum install --assumeyes gdisk"
    },
    {
        "type": "shell",
        "script": "scripts/provisioning/rewrite_root_disk_partition_table.sh",
        "environment_vars": ["PATH=/bin:/sbin:/usr/bin:/usr/sbin",
                             "VIRTUALIZATION_TYPE={{user `ami_virtualization_type`}}"],
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E {{ .Path }}"
    },
    {
        "type": "shell",
        "inline": "sudo reboot"
    },
    {
        "type": "shell",
        "scripts": ["scripts/provisioning/rhel6_provisioner.sh",
                    "scripts/provisioning/parcel_provisioner.sh"],
        "environment_vars": ["PARCEL_URL={{user `parcel_url`}}", "CM_REPOSITORY_URL={{user `cm_repository_url`}}",
                             "PREEXTRACT_PARCEL={{user `preextract_parcel`}}"],
        "pause_before": "120s"
    }]
}
